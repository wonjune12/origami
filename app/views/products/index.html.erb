<p id="notice"><%= notice %></p>

<div class="container">
  <center><h1 class="uk-margin-bottom">All things attached</h1> <h1>Products</h1></center>

  <div class="row d-flex">

    <% @products.each do |product| %>
      <div class="card border-0 m-3" style="width: 30%;">
        <%= image_tag(product.image, class:"card-img-top")%>
        <div class="card-body">
          <h5 class="card-title"><%=link_to "#{product.name}", product_path(product)%></h5>
          <p class="card-text"><%=product.color%></p>
          <p class="card-text">$<%=product.price%>.00</p>
        </div>
      </div>
    <% end %>
    </div>


<br>
<div class="bottomright">
  <% if seller_signed_in? %>
    <%= link_to 'New Product', new_product_path %>
  <% end%>
</div>
